html
  include includes/header.pug
  div(id="deckList" class="clearfix")
    select(id="formats")
      option(value="") Choose a format:
      each val in formats
        option(value=val.name) #{val.name}
    div(id="decksContainer" class="hide")
      |Choose a deck:
      select(id="decks")
    div(id="addCardContainer" class="clearfix")    
      button(id="buttonAddCard" class="button") Add a card
      form(action="/submit-card" method="post" id="editPageAddCardForm")
        div(id="addCardForm")
          | Card Name:
          input(type="text" name="card")
          br
          | Amount:
          input(type="text" name="amount" value="1")
          br
          input(type="submit" value="Add card")
          div(id="confirmationMessage") 
    div(id="listContainer" )    
      div(id="deckEdit")
      div(id="deckInfo")
      div(id="deckList")   
        ul(id="creatures")
        ul(id="spells")
        ul(id="lands")   
        ul(id="sideboard")
      div(id="totalCards")
      br
    
    script(src="javascript/jquery-3.3.1.js")
    script(src="js/vendor/foundation.js")
    script(src='javascript/script.js')
      
    
        
      
      
